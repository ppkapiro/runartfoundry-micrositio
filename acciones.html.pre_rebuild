    <!-- Script espec√≠fico para checklist -->
    <script>
        // Funcionalidad del checklist interactivo
        function guardarProgreso() {
            const checkboxes = document.querySelectorAll('#checklist input[type="checkbox"]');
            const progreso = Array.from(checkboxes).map(cb => cb.checked);
            localStorage.setItem('run-checklist-progreso', JSON.stringify(progreso));
            
            // Mostrar mensaje de confirmaci√≥n
            const mensaje = document.createElement('div');
            mensaje.className = 'callout callout-success';
            mensaje.innerHTML = '<p>‚úÖ Progreso guardado correctamente</p>';
            mensaje.style.position = 'fixed';
            mensaje.style.top = '100px';
            mensaje.style.right = '20px';
            mensaje.style.zIndex = '1000';
            mensaje.style.maxWidth = '300px';
            
            document.body.appendChild(mensaje);
            
            setTimeout(() => {
                document.body.removeChild(mensaje);
            }, 3000);
        }

        function resetearChecklist() {
            if (confirm('¬øEst√°s seguro de que quieres resetear todo el progreso?')) {
                const checkboxes = document.querySelectorAll('#checklist input[type="checkbox"]');
                checkboxes.forEach(cb => cb.checked = false);
                localStorage.removeItem('run-checklist-progreso');
            }
        }

        // Cargar progreso guardado al inicializar
        document.addEventListener('DOMContentLoaded', function() {
            const progresoGuardado = localStorage.getItem('run-checklist-progreso');
            if (progresoGuardado) {
                const progreso = JSON.parse(progresoGuardado);
                const checkboxes = document.querySelectorAll('#checklist input[type="checkbox"]');
                
                progreso.forEach((checked, index) => {
                    if (checkboxes[index]) {
                        checkboxes[index].checked = checked;
                    }
                });
            }
        });
    </script>

